# Application
APP_NAME=EventMaker
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/eventmaker?schema=public"

# Authentication
AUTH_SECRET="your-auth-secret-key"

# Email Configuration
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=user@example.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@eventmaker.example.com

# Features
ENABLE_PUBLIC_REGISTRATION=true
MAX_EVENTS_PER_USER=10
DEFAULT_EVENT_CAPACITY=50

# Add any other environment-specific variables below 